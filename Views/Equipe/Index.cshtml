@model Equipe 
@{
    ViewData["Title"] = "Equipes";
}

<div class= "titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

                                                     @* trabalhar com arquivos *@
<form method="POST" action='@Url.Action("Cadastrar")'  enctype="multipart/form-data" calss="cadastro">

    <div class="campo">
        <label>ID</label>
        <Input type="text" name="IdEquipe"/>        
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome"/>
    </div>

    <div class="campo">
        <label>Imagem</label>
        <input type="file" name="Imagem"/>
    </div>

    <button class="gradient btn" type="submite">Cadastar</button>

</form>
<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
        <th>Ação</th>
        
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50"></td>
                <td><a asp-area="Link para excluir uma equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>